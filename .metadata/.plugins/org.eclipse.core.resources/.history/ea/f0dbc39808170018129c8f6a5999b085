package bancoDeDados;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;

/**
 * UNIVERSIDADE FEDERAL DE CAMPINA GRANDE - LABORATÃ“RIO DESIDES 
 * SISTEMA SAD4GM
 * 
 * @author caiosbl
 *
 */

public abstract class DataBaseTools {

	protected Connection con;

	protected void criaConexao() {

		try {
			Class.forName("org.apache.derby.jdbc.EmbeddedDriver");
			con = DriverManager.getConnection("jdbc:derby:Sad4gmDatabase; create = true");
		} catch (Exception e) {
			e.printStackTrace();
		}
	}
	
	private void criaBancoDados() {
		try {
			Class.forName("org.apache.derby.jdbc.EmbeddedDriver");
			con = DriverManager.getConnection("jdbc:derby:Sad4gmDatabase; create = true");
		} catch (Exception e) {
			e.printStackTrace();
		}
		
		PreparedStatement state = con.prepareStatement("create SCHEMA sad4gm;\r\n" + 
				"\r\n" + 
				"create table sad4gm.usuario(\r\n" + 
				"nome long VARCHAR,\r\n" + 
				"id long VARCHAR,\r\n" + 
				"senha INTEGER NOT NULL,\r\n" + 
				"auditor long VARCHAR,\r\n" + 
				"ativo INTEGER);\r\n" + 
				"\r\n" + 
				"create table sad4gm.admin(\r\n" + 
				"nome long VARCHAR,\r\n" + 
				"id long VARCHAR,\r\n" + 
				"senha long VARCHAR\r\n" + 
				");\r\n" + 
				"\r\n" + 
				"create table sad4gm.maquina(\r\n" + 
				"nome VARCHAR(20) NOT NULL,\r\n" + 
				"codigo INTEGER NOT NULL,\r\n" + 
				"descricao VARCHAR(20)NOT NULL);\r\n" + 
				"\r\n" + 
				"INSERT INTO sad4gm.admin (nome, senha,id) VALUES ('Desides Admin','rootdesides','admin');");
	}

	protected void fechaConexao() {
		try {
			if (con != null)
				con.close();
		} catch (Exception e) {
			e.printStackTrace();
		}
	}

}