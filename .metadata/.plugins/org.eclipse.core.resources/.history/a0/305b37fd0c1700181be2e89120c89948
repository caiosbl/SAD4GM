package bancoDeDados;

import java.io.FileInputStream;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.SQLException;

/**
 * UNIVERSIDADE FEDERAL DE CAMPINA GRANDE - LABORATÃ“RIO DESIDES SISTEMA SAD4GM
 * 
 * @author caiosbl
 *
 */

public abstract class DataBaseTools {

	protected Connection con;

	protected void criaConexao() throws SQLException {

		try {
			Class.forName("org.apache.derby.jdbc.EmbeddedDriver");
			con = DriverManager.getConnection("jdbc:derby:Sad4gmDatabase;");
		} catch (Exception e) {
			inicializaBancoDados();
		}
	}

	private void inicializaBancoDados() throws SQLException {
		try {
			Class.forName("org.apache.derby.jdbc.EmbeddedDriver");
			con = DriverManager.getConnection("jdbc:derby:Sad4gmDatabase; create = true");

			PreparedStatement inicializa = con.prepareStatement("create SCHEMA sad4gm;");
			inicializa.execute();
			inicializa = con.prepareStatement("create table sad4gm.usuario(\r\n" + 
					"nome long VARCHAR,\r\n" + 
					"id long VARCHAR,\r\n" + 
					"senha INTEGER NOT NULL,\r\n" + 
					"auditor long VARCHAR,\r\n" + 
					"ativo INTEGER);");
		} catch (Exception e) {
			e.printStackTrace();
		}

	}

	protected void fechaConexao() {
		try {
			if (con != null)
				con.close();
		} catch (Exception e) {
			e.printStackTrace();
		}
	}

}